            <Font name="HP Simplified" size="14.0" />
         </font>
      </Label>
      <JFXTextField fx:id="txtUsername" focusColor="#3f77a8" layoutX="127.0" layoutY="64.0" prefHeight="25.0" prefWidth="152.0" promptText="Username" unFocusColor="#d0d0d0">
         <font>
            <Font name="HP Simplified" size="12.0" />
         </font>
      </JFXTextField>
      <JFXButton fx:id="btnLogin" layoutX="127.0" layoutY="157.0" onAction="#Login" prefHeight="38.0" prefWidth="105.0" style="-fx-background-color: #777777;" text="Login" textFill="WHITE">
         <font>
            <Font name="HP Simplified" size="11.0" />
         </font>
      </JFXButton>
      <JFXPasswordField fx:id="txtPassword" focusColor="#3f77a8" layoutX="127.0" layoutY="107.0" prefHeight="29.0" prefWidth="152.0" promptText="Password" unFocusColor="#cdcdcd">
