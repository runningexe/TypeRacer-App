<AnchorPane prefHeight="210.0" prefWidth="400.0" style="-fx-background-color: #555555;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.LoginController">
   <children>
      <Label fx:id="isConnected" layoutX="27.0" layoutY="14.0" prefHeight="38.0" prefWidth="250.0" text="Status" textFill="#5888b5" wrapText="true">
