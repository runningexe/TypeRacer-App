      </ImageView>
      <Label layoutX="27.0" layoutY="64.0" prefHeight="25.0" prefWidth="89.0" text="Username:" textFill="#fcfcfc">
         <font>
            <Font name="HP Simplified Italic" size="12.0" />
         </font>
      </Label>
      <Label layoutX="27.0" layoutY="109.0" prefHeight="25.0" prefWidth="89.0" text="Password:" textFill="#fcfcfc">
         <font>
            <Font name="HP Simplified Italic" size="12.0" />
         </font>
      </Label>
   </children>
